{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:best-practices',
  ],
  postUpdateOptions: [
    'gomodTidy',
  ],
  customManagers: [
    {
      customType: 'regex',
      managerFilePatterns: [
        '/^Makefile$/',
      ],
      matchStrings: [
        'go run (?<depName>.*?)@(?<currentValue>.*?) ',
      ],
      datasourceTemplate: 'go',
    },
    {
      customType: 'regex',
      managerFilePatterns: [
        '/example/quickstart/docker-compose\\.ya?ml$/',
      ],
      matchStrings: [
        'image:\\s+(?<depName>[^:]+):(?<currentValue>[^\\s]+)',
      ],
      datasourceTemplate: 'docker',
    },
  ],
  packageRules: [
    {
      groupName: 'all patch and minor',
      matchPackageNames: [
        '*',
      ],
      matchUpdateTypes: [
        'minor',
        'patch',
        'digest',
      ],
      automerge: true,
    },
  ],
}